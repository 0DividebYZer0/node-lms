<div class="container-fluid h-100">
 <div class="row h-100">
   <main class="col bg-faded py-3">
     <span class="text-center">
       <h1>{{class.title}}</h1>
       <br />
     </span>
     <div class="container">
       <table class="table">
         <thead class="" style="background-color: #b8bad6;">
           <tr>
             <th scope="col">Lesson Number</th>
             <th scope="col">Lesson Title</th>
             <th scope="col">Details</th>
             <th scope="col">Edit Lesson</th>
             <th scope="col">Delete Lesson</th>
           </tr>
         </thead>
         <tbody>
           {{#each class.lessons}}
             <tr>
               <td>{{lesson_number}}</td>
               <td>{{lesson_title}}</td>
               <td><a href="/classes/{{../class._id}}/lessons/{{lesson_number}}">View Lesson</a></td>
               <td><a href="/instructors/classes/{{../class._id}}/lesson/{{lesson_number}}/edit">Edit Lesson</a></td>
               <td><a href="/instructors/classes/{{../class._id}}/lesson/{{lesson_number}}/delete">Delete Lesson</a></td>
             </tr>
           {{/each}}
         </tbody>
       </table>
       {{#if instructor}}
         <div class="container">
           <a href="/instructors/classes/{{class.id}}/lessons/new" role="button" class="btn btn-custom">Add New Lesson</a>
           <a href="/instructors/classes/" role="button" class="btn btn-custom">Back to classes</a>
         </div>
       {{/if}}
     </div>
   </main>
 </div>
</div>
